.main {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    background: radial-gradient(circle at 50% 408rpx,#21d3fc, #021f49)
}
.topImage {
    width: 100%;
}
.image1 {
    width: 100%;
}
.tip {
    text-align: center;
}
.subTip {
    position: relative;
    display: inline-flex;
    justify-content: center;
    align-items: center;
}
.image_1 {
    width: 151rpx;
    height: 51rpx;
}
.image_2 {
    width: 206rpx;
    height: 51rpx;
}
.image_3 {
    width: 167rpx;
    height: 51rpx;
}
.tipText {
    position: absolute;
    color: #fff;
    font-size: 28rpx;
}
.title {
    margin-top: 72rpx;
    margin-bottom: 66rpx;
    text-align: center;
}
.titleText {
    color: #fff;
    font-size: 28rpx;
}
.button {
    margin-bottom:70rpx;
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
}
.buttonText {
    position: absolute;
    padding-bottom: 12rpx;
    color: #fff;
    font-size: 32rpx;
    border-bottom: 6rpx solid  #00ffff;
}
.uploadImg {
    width: 355rpx;
    height: 94rpx;
}