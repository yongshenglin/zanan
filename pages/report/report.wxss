@import "../../utils/iconfont.wxss";
.main {
    height: 100%;
}
.title {
    margin-top: 48rpx;
    font-size: 36rpx;
    text-align: center;
    margin-bottom: 24rpx;
}
.avatar {
    width: 136rpx;
    height: 136rpx;
    border-radius: 100%;
    margin: 0 auto;
    margin-bottom: 38rpx;
}
.userName {
    font-size: 32rpx;
    text-align: center;
    margin-bottom: 66rpx;
}
.report {
    width: 574rpx;
    padding: 44rpx;
    border: 2rpx solid #e6e8ef;
    margin: 0 auto;
    border-radius: 10rpx;
}
.topReport {
    display: flex;
    justify-content: space-between;
}
.reportIcon {
    margin-left: 10rpx;
    color: #4087f2;
    font-size: 48rpx;
    font-weight: bold;
}
.myReport {
    font-size: 32rpx;
    margin-right: 10rpx;
    color: #000;
}
.subReport {
    height: 100rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.reportOne {
    display: flex;
    align-items: center;
}
.subReportImg {
    margin-left: 10rpx;
    width: 78rpx;
    height: 78rpx;
    border-radius: 100%;
    margin-right: 20rpx;
}
.hr {
    height: 2rpx;
    border-bottom: 2rpx solid #e6e9ef;
}
.balance {
    width: 574rpx;
    height: 48rpx;
    padding: 44rpx;
    border-radius: 10rpx;
    margin: 0 auto;
    margin-top: 24rpx;
    border: 2rpx solid #e6e8ef;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.purchase {
    width: 128rpx;
    height: 52rpx;
    font-size: 28rpx;
    color: #fff;
    text-align: center;
    line-height: 52rpx;
    border-radius: 10rpx;
    background-color: #4087f2;
}
.gongzhonghao {
    width: 574rpx;
    height: 48rpx;
    padding: 44rpx;
    border-radius: 10rpx;
    margin: 0 auto;
    margin-top: 24rpx;
    border: 2rpx solid #e6e8ef;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.gongzhonghaoImg {
    width: 76rpx;
    height: 76rpx;
    border-radius: 100%;
    background-color: #00c1de;
    margin-left: 10rpx;
}
.gongzhonghaoText {
    font-size: 28rpx;
}
.guanzhu {
    width: 128rpx;
    height: 52rpx;
    font-size: 32rpx;
    color: #fff;
    text-align: center;
    line-height: 52rpx;
    border-radius: 10rpx;
    background-color: #4087f2;
}
.ceyice {
    text-align: center;
    margin-top: 76rpx;
}
.ceyiceText {
    font-size: 32rpx;
    color: #4087f2;
}
.weui-demo-dialog{
    visibility:hidden;
    opacity:0;
    transition:opacity .3s;
  }
.weui-demo-dialog_show{
    visibility:visible;
    opacity:1;
}
